<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fechas y graficas"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:layout_centerInParent="true"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>
    <com.prolificinteractive.materialcalendarview.MaterialCalendarView
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="60"
        android:layout_marginTop="20dp"
        app:mcv_arrowColor="@color/colorAccent"
        app:mcv_dateTextAppearance="@style/CustomTextAppearance"
        app:mcv_firstDayOfWeek="sunday"
        app:mcv_headerTextAppearance="@style/CustomTextAppearance"
        app:mcv_selectionColor="@color/colorPrimaryDark"
        app:mcv_weekDayTextAppearance="@style/CustomTextAppearance" />

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40"
        android:id="@+id/graph"
        android:layout_marginBottom="20dp"
        app:seriesType="line" />
</LinearLayout>